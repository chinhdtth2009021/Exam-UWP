    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView x:Name="MyNavView" BackRequested="MyNavView_BackRequested" ItemInvoked="MyNavView_ItemInvoked" SelectionChanged="Navigationvoew_SelectionChanged">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Add" Icon="Add" Tag="Add_Contact"/>
            <NavigationViewItem Content="Search" Icon="Find" Tag="Search_Contact"/>
        </NavigationView.MenuItems>
        <NavigationView.AutoSuggestBox>
            <AutoSuggestBox>
            </AutoSuggestBox>
        </NavigationView.AutoSuggestBox>
        <ScrollViewer>
            <Frame x:Name="ContentPage" Padding="10" />
        </ScrollViewer>
    </NavigationView>
</Page>
